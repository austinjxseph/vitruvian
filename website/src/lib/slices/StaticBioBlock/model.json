{
  "id": "static_bio_block",
  "type": "SharedSlice",
  "name": "StaticBioBlock",
  "description": "Bio section with staggered images, intro, and flexible content sections",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Two-column layout with staggered images and content sections",
      "imageUrl": "",
      "primary": {
        "bio_heading": {
          "type": "StructuredText",
          "config": {
            "label": "Bio Heading",
            "placeholder": "Add heading here",
            "allowTargetBlank": true,
            "single": "paragraph,em,strong"
          }
        },
        "bio_content": {
          "type": "StructuredText",
          "config": {
            "label": "Bio Content",
            "placeholder": "Add body text, featured underneath the heading",
            "allowTargetBlank": true,
            "multi": "paragraph,em,strong,hyperlink"
          }
        },
        "bio_images": {
          "type": "Group",
          "config": {
            "label": "Bio Images",
            "fields": {
              "image": {
                "type": "Image",
                "config": {
                  "label": "Image",
                  "constraint": {},
                  "thumbnails": []
                }
              }
            }
          }
        },
        "bio_items": {
          "type": "Group",
          "config": {
            "label": "Bio Items",
            "fields": {
              "item_type": {
                "type": "Select",
                "config": {
                  "label": "Item Type",
                  "placeholder": "Select type...",
                  "options": ["header", "cell"],
                  "default_value": "cell"
                }
              },
              "item_heading": {
                "type": "Text",
                "config": {
                  "label": "Heading",
                  "placeholder": "Add the group heading here"
                }
              },
              "item_subtitle": {
                "type": "Text",
                "config": {
                  "label": "Subtitle (cell only)",
                  "placeholder": "Add the group subheading here, featured as secondary text"
                }
              },
              "item_index": {
                "type": "Text",
                "config": {
                  "label": "Index (cell only)",
                  "placeholder": "Add the group index here, featured right-aligned"
                }
              },
              "item_description": {
                "type": "StructuredText",
                "config": {
                  "label": "Description",
                  "placeholder": "Add the group body text here (optional)",
                  "allowTargetBlank": true,
                  "single": "paragraph,em,strong,hyperlink"
                }
              }
            }
          }
        }
      },
      "items": {}
    }
  ]
}
