{
  "id": "bio",
  "type": "SharedSlice",
  "name": "Bio",
  "description": "Bio section with staggered images, intro, and flexible content sections",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Two-column layout with staggered images and content sections",
      "imageUrl": "",
      "primary": {
        "bio_heading": {
          "type": "StructuredText",
          "config": {
            "label": "Bio Heading",
            "placeholder": "I'm a Design Engineer currently based in London...",
            "allowTargetBlank": true,
            "single": "paragraph,em,strong"
          }
        },
        "bio_content": {
          "type": "StructuredText",
          "config": {
            "label": "Bio Content",
            "placeholder": "Your biography paragraphs...",
            "allowTargetBlank": true,
            "multi": "paragraph,em,strong,hyperlink"
          }
        },
        "bio_images": {
          "type": "Group",
          "config": {
            "label": "Bio Images",
            "fields": {
              "image": {
                "type": "Image",
                "config": {
                  "label": "Image",
                  "constraint": {},
                  "thumbnails": []
                }
              }
            }
          }
        },
        "bio_items": {
          "type": "Group",
          "config": {
            "label": "Bio Items",
            "fields": {
              "item_type": {
                "type": "Select",
                "config": {
                  "label": "Item Type",
                  "placeholder": "Select type...",
                  "options": ["header", "row"],
                  "default_value": "row"
                }
              },
              "item_heading": {
                "type": "Text",
                "config": {
                  "label": "Item Heading",
                  "placeholder": "Section title or row heading"
                }
              },
              "item_subtitle": {
                "type": "Text",
                "config": {
                  "label": "Item Subtitle",
                  "placeholder": "Secondary text (period, institution, etc.)"
                }
              },
              "item_index": {
                "type": "Text",
                "config": {
                  "label": "Item Index",
                  "placeholder": "Optional (e.g., years: 2022-2023)"
                }
              },
              "item_description": {
                "type": "StructuredText",
                "config": {
                  "label": "Item Description",
                  "placeholder": "Optional description text...",
                  "allowTargetBlank": true,
                  "single": "paragraph,em,strong,hyperlink"
                }
              }
            }
          }
        }
      },
      "items": {}
    }
  ]
}
