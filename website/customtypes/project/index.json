{
  "format": "custom",
  "id": "project",
  "label": "Project",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "project_index": {
        "type": "Number",
        "config": {
          "label": "Project Index",
          "placeholder": "Add an optional index to rank entries by priority"
        }
      },
      "project_name": {
        "type": "Text",
        "config": {
          "label": "Project Name",
          "placeholder": "Add name here"
        }
      },
      "project_title": {
        "type": "Text",
        "config": {
          "label": "Project Title",
          "placeholder": "Main project headline - appears in article header and meta tags"
        }
      },
      "tags": {
        "type": "Group",
        "config": {
          "label": "Tags",
          "repeat": true,
          "fields": {
            "project_tags": {
              "type": "Select",
              "config": {
                "label": "Project Tags",
                "placeholder": "Select tags from the dropdown below",
                "options": [
                  "Web Design",
                  "Branding & Identity",
                  "Front-end Development",
                  "Product Design",
                  "Social Media",
                  "DevOps"
                ]
              }
            }
          }
        }
      },
      "project_description": {
        "type": "StructuredText",
        "config": {
          "label": "Project Description",
          "placeholder": "Long-form project overview - appears below title in article header",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "showcase": {
        "type": "Boolean",
        "config": {
          "label": "Showcase?",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": true
        }
      },
      "thumbnail_base": {
        "type": "Image",
        "config": {
          "label": "Thumbnail Base",
          "thumbnails": []
        }
      },
      "thumbnail_overlay": {
        "type": "Image",
        "config": {
          "label": "Thumbnail Overlay",
          "thumbnails": []
        }
      },
      "published": {
        "type": "Date",
        "config": {
          "label": "Published",
          "placeholder": "Project completion or publish date"
        }
      }
    },
    "Metadata": {
      "project_metadata": {
        "type": "Group",
        "config": {
          "label": "Project Metadata",
          "repeat": true,
          "fields": {
            "metadata_label": {
              "type": "Text",
              "config": {
                "label": "Label",
                "placeholder": "Add metadata label here"
              }
            },
            "metadata_content": {
              "type": "Text",
              "config": {
                "label": "Value",
                "placeholder": "Add metadata content here"
              }
            }
          }
        }
      }
    },
    "Content": {
      "slices2": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "article_header": {
              "type": "SharedSlice"
            },
            "article_image_block": {
              "type": "SharedSlice"
            },
            "article_numbered_grid": {
              "type": "SharedSlice"
            },
            "article_text_block": {
              "type": "SharedSlice"
            },
            "article_full_bleed": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "Search-Engine Optimisation": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "SEO title for search engines (50-60 characters)"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "SEO description for search engines (150-160 characters)."
        }
      },
      "meta_image": {
        "type": "Image",
        "config": {
          "label": "Social Share Image",
          "constraint": {
            "width": 1200,
            "height": 800
          },
          "thumbnails": []
        }
      }
    }
  }
}
